<h1>Blog</h1>
<p>Occasional writes that I do.</p>

{{#each post}}
  <div class='card mb-3 rounded-0'>
    <div class='row no-gutters'>
      <div class='col-md-4'>
        <img class='card-img' src={{img}}>
      </div>
      <div class='col-md-8'>
        <div class='card-body'>
          <h5 class='card-title'>{{title}}</h5>
          <p class='card-text'>{{spoiler}}</p>
          <p class='card-text'>
            <small class='text-muted'>{{date}}</small>
          </p>
          <a class='stretched-link' href={{url}}>Read</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}
