extends layout

block content
  h1 Contact

  hr

  p.h5 Email form
  form(action="/contact", method="post")
    .form-row
      .form-group.col-md-6
        label(for="contactName") Name
        input.form-control.form-control-sm(type="text" name='contactName' id="contactName" placeholder='John Doe' required)

      .form-group.col-md-6
        label(for="contactEmail") Email address
        input.form-control.form-control-sm(type="email" name='contactEmail' id="contactEmail" placeholder="john.doe@example.com" required)

    .form-group
      label(for="contactBody") Message
      textarea.form-control.form-control-sm(rows="5" name='contactBody' id="contactBody" placeholder='Message goes here.' required)

    button.btn.btn-primary(type="submit") Submit
